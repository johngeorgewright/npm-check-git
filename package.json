{
  "name": "npm-check-git",
  "version": "0.0.1",
  "description": "Scans for outdated git dependencies",
  "main": "dist/npm-check-git.js",
  "bin": "dist/cli/index.js",
  "scripts": {
    "cli": "ts-node src/cli",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postbuild": "rimraf dist/**/*.test.js*",
    "prepublishOnly": "npm run build",
    "test": "jest --runInBand src",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johngeorgewright/npm-check-git.git"
  },
  "keywords": [
    "npm",
    "check",
    "outdated",
    "git"
  ],
  "author": "John Wright <johngeorge.wright@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johngeorgewright/npm-check-git/issues"
  },
  "homepage": "https://github.com/johngeorgewright/npm-check-git#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@types/hosted-git-info": "^3.0.0",
    "@types/jest": "^26.0.10",
    "@types/pacote": "^11.1.0",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^6.0.0",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "lint-staged": {
    "*.{md,json,js,jsx,ts,tsx,yml,yaml}": [
      "prettier --ignore-path .gitignore --write"
    ]
  },
  "dependencies": {
    "@johngw/error": "^1.2.0",
    "hosted-git-info": "^4.0.0",
    "pacote": "^11.1.11",
    "yargs": "^16.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
